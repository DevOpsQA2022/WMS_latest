<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00555555"
    android:backgroundTint="#00555555"
    android:descendantFocusability="beforeDescendants"
    android:focusableInTouchMode="true"
    android:layout_marginTop="100dp"
    android:padding="10dp"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite"
        android:layout_below="@+id/tablerow6"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/lay_TranslistTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="2dp">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:gravity="center|left"
                android:paddingLeft="5dp"
                android:src="@drawable/warning"
                android:layout_marginTop="10dp"
                android:text="@string/txt_item"
                android:textAppearance="?android:attr/textAppearanceSmall"

                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:gravity="left|center"
                android:layout_marginTop="16dp"
                android:text="Alert"
                android:textColor="@color/colorBlack"
                android:paddingLeft="5dp"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textSize="22sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/lay_TranslistTitle1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="2dp">


            <TextView
                android:id="@+id/txt_alertMsg"
                android:layout_width="260dp"
                android:layout_height="wrap_content"
                android:gravity="left|center"
                android:layout_marginTop="2dp"
                android:layout_marginLeft="7dp"
                android:text=""
                android:paddingLeft="5dp"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textSize="15sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/lay_TranslistTitle2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp"
            android:padding="2dp">


            <TextView
                android:id="@+id/txt_cancel"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="7dp"
                android:text="CANCEL"
                android:textStyle="bold"
                android:textColor="@color/colorRed"
                android:paddingLeft="5dp"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/txt_ok"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="7dp"
                android:text="OK"
                android:textStyle="bold"
                android:textColor="@color/colorRed"
                android:paddingLeft="5dp"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textSize="14sp" />

        </LinearLayout>








    </LinearLayout>





</LinearLayout>
