<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroundcolor">

    <TableRow
        android:id="@+id/tablerow2"
        android:layout_width="fill_parent"
        android:layout_height="35dp"
        android:layout_marginLeft="3dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="3dp"
        android:layout_marginBottom="1dp"
        android:layout_weight="1">

        <TextView
            android:layout_height="40dp"
            android:layout_weight="0.70"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:text="@string/Pallet"
            android:textSize="14sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/edtPallet"
            android:layout_height="40dp"
            android:layout_weight="0.30"
            android:background="@color/colorWhite"
            android:gravity="center_vertical"
            android:inputType="number"
            android:maxLength="10"
            android:hint="Enter Pallet"
            android:paddingLeft="10dp"
            android:singleLine="true"
            android:textSize="14sp"/>
    </TableRow>


    <TableRow
        android:id="@+id/tablerow8"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tablerow2"
        android:layout_marginLeft="3dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="3dp"
        android:layout_weight="3">


        <TextView
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:text="Item"
            android:layout_weight="0.85"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:layout_height="wrap_content"
            android:text="Location"
            android:gravity="right"
            android:hint=""
            android:textStyle="bold"
            android:layout_weight="1"
            android:paddingLeft="10dp"
            android:textSize="14sp" />
        <TextView
            android:layout_height="wrap_content"
            android:text="Pallet Qty"
            android:gravity="right"
            android:hint=""
            android:textStyle="bold"
            android:layout_weight="1"
            android:paddingLeft="10dp"
            android:textSize="14sp" />

    </TableRow>

    <TableRow
        android:id="@+id/tablerow"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tablerow8"
        android:layout_marginLeft="6dp"
        android:layout_marginRight="3dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="1dp"
        android:layout_weight="3">


        <TextView
            android:id="@+id/tv_RP_Item"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:layout_weight="0.85"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tvLoact"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:hint=""
            android:layout_weight="1"
            android:paddingLeft="10dp"
            android:textSize="14sp" />
        <TextView
            android:id="@+id/tvPalletQty"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:hint=""
            android:layout_weight="1"
            android:paddingLeft="10dp"
            android:textSize="14sp" />

    </TableRow>

    <TableRow
        android:id="@+id/tablerow3"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tablerow"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="3dp"
        android:layout_weight="3">


        <TextView
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:text="SO Alloc"
            android:layout_weight="0.85"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:layout_height="wrap_content"
            android:text="Repack Alloc"
            android:gravity="right"
            android:hint=""
            android:textStyle="bold"
            android:layout_weight="1"
            android:paddingLeft="10dp"
            android:textSize="14sp" />
        <TextView
            android:layout_height="wrap_content"
            android:text="Temp Alloc"
            android:gravity="right"
            android:hint=""
            android:textStyle="bold"
            android:layout_weight="1"
            android:paddingLeft="10dp"
            android:textSize="14sp" />


    </TableRow>

    <TableRow
        android:id="@+id/tablerow33"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tablerow3"
        android:layout_marginLeft="6dp"
        android:layout_marginRight="3dp"
        android:layout_marginTop="5dp"
        android:layout_weight="3">


        <TextView
            android:id="@+id/tvSotranAlloc"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:layout_weight="0.85"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tvRepackAlloc"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:hint=""
            android:layout_weight="1"
            android:paddingLeft="10dp"
            android:textSize="14sp" />
        <TextView
            android:id="@+id/tvTepmAlloc"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:paddingLeft="10dp"
            android:textSize="14sp" />

    </TableRow>



    <TableRow
        android:id="@+id/tablerow5"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tablerow33"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="35dp"
        android:layout_weight="3">

        <Button
            android:id="@+id/btn_resetSotranAloc"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_weight="0.04"
            android:text="Recalculate Sotran Allocation"
            android:textSize="12sp" />
    </TableRow>
    <TableRow
        android:id="@+id/tablerow6"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tablerow5"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="35dp"
        android:layout_weight="3">

        <Button
            android:id="@+id/btn_resetRepackAloc"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_weight="0.04"
            android:text="Recalculate Repack Allocation"
            android:textSize="12sp" />
    </TableRow>
    <TableRow
        android:id="@+id/tablerow7"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tablerow6"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="35dp"
        android:layout_weight="3">

        <Button
            android:id="@+id/btn_updPltQty"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:visibility="gone"
            android:layout_weight="0.04"
            android:text="Update pallet Qty"
            android:textSize="12sp" />
    </TableRow>

<!--
    <TableRow
        android:id="@+id/tablerow7"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tablerow6"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="35dp"
        android:layout_weight="3">

        <Button
            android:id="@+id/btn_resetsiteAloc"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_weight="0.04"
            android:text="Reset site to site Allocation"
            android:textSize="14sp" />
    </TableRow>
-->




    <TableRow
        android:id="@+id/tablerow11"
        android:layout_width="fill_parent"
        android:layout_height="35dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:layout_weight="2">



        <Button
            android:id="@+id/btn_cancel"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:text="Cancel"
            android:textSize="14sp" />

        <Button
            android:id="@+id/btn_done"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:text="Done"
            android:textSize="14sp" />




    </TableRow>

</RelativeLayout>